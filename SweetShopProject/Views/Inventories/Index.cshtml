@model IEnumerable<SweetShopProject.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.quantityAvail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quantityAvail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prod.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat.id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
