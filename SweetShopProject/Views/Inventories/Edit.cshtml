@model SweetShopProject.Models.Inventory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="quantityAvail" class="control-label"></label>
                <input asp-for="quantityAvail" class="form-control" />
                <span asp-validation-for="quantityAvail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalQuantity" class="control-label"></label>
                <input asp-for="totalQuantity" class="form-control" />
                <span asp-validation-for="totalQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalSold" class="control-label"></label>
                <input asp-for="totalSold" class="form-control" />
                <span asp-validation-for="totalSold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prodID" class="control-label"></label>
                <select asp-for="prodID" class="form-control" asp-items="ViewBag.prodID"></select>
                <span asp-validation-for="prodID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="catID" class="control-label"></label>
                <select asp-for="catID" class="form-control" asp-items="ViewBag.catID"></select>
                <span asp-validation-for="catID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
